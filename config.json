{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "files": [
        {
          "destination": "tokens/css/variables.css",
          "format": "css/variables"
        }
      ]
    },
            "scss": {
                "transformGroup": "scss",
                "files": [
                    {
                        "destination": "tokens/scss/variables.scss",
                        "format": "scss/variables"
                    }
                ]
            }
  }
}
